{% extends 'base.html.twig' %}

{% block title %}Categories
{% endblock %}

{% block body %}
	<div class="card col-md-12">
		<div class="card-header">
			<a class="btn-back text-secondary" href="/">
				<i class="fas fa-2x fa-arrow-circle-left"></i>
			</a>
			<h3>
				<i class="fas fa-store"></i>
				Boutique
				<span class="badge badge-pill badge-secondary">{{categories|length}}</span> rayon(s) propos√©(s)
			</h3>
		</div>
		<div class="card-body row">
			{% for item in categories %}
				<div class="col-md-3">
					<div class="card clickable" onclick="location = '{{ path('app_boutique_rayon', {'idCategorie': item.id}) }}'">
						<img src="{{asset(item.visuel)}}"/>
						<div class="card-body">
							<h4 class="card-title">{{item.libelle}}</h4>
							<p class="card-text">
								<i>{{item.texte}}</i>
							</p>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}
